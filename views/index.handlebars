<div class="container">
    <div class="row text text-center">
        <div class="col-12">
            <h1 class="mt-4">Summer Treats</h1>
            <h4 class="mt-2">Eat Those Yummy Sweet Summer Treats!</h4>
            <br>
            <img src="/assets/img/pop.jpg" alt="cupcakes"/>
            <img src="/assets/img/icecream.jpg" alt="cupcakes" />
            <img src="/assets/img/pie.jpg" alt="cupcakes" />
        </div>
    </div>

    <div class="row text text-center mt-5 pt-2">
        <div class="col-6">
            <h4>About To Be Eaten:</h4>
            <ul class="mt-4">
                {{#each treats}}
                {{#unless devoured}}
                    <p class="notEaten">
                        {{this.id}} {{this.treat_name}}
                        {{!-- noweaten connects to the summerTreats.js when button clicked and created ajax to change devoured to true --}}
                        <button class="ml-2" id="devbtn" data-id="{{id}}"> 
                            Eat Me!</button>
                    </p>
                    {{/unless}}
                {{/each}}
            </ul>
            
        </div>

        <div class="col-6">
            <h4>Already Eaten:</h4>
            <ul class="mt-4">
                {{#each treats}}
                {{#if devoured}}
                <p class="eaten">
                {{this.id}} {{this.treat_name}}
                </p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row text text-center mt-5">
        <div class="col-12">
            <h4>Enter a Treat to Eat</h4>
            <form class="create-form">
            
                <div class="form-group">
                    <label for="ca">Treat Name:</label>
                    <textarea class="form-control" id="treatName" rows="2"></textarea> 
                </div>
            
                <button id="treatSubmit" type="submit">Add Treat</button>
            </form>
        </div>
    </div>
</div>