<div class="container">
    <div class="row font text-center">
        <div class="col-12">
            <h1 class="header mt-4">Summer Treats</h1>
            <h4 class="size25 violetRed mt-2">Eat Those Yummy Sweet Summer Treats!</h4>
            <br>
            <img src="/assets/img/pop.jpg" alt="cupcakes"/>
            <img src="/assets/img/icecream.jpg" alt="cupcakes" />
            <img src="/assets/img/pie.jpg" alt="cupcakes" />
        </div>
    </div>

    <div class="row font text-center mt-5 pt-2">
        <div class="col-6">
            <h5 class="size25 red">About To Be Eaten:</h5>
            <ul class=" violetRed mt-4">
                {{#each treats}}
                {{#unless devoured}}
                    <p class="notEaten">
                        {{id}} {{treat_name}}
                        {{!-- noweaten connects to the summerTreats.js when button clicked and created ajax to change devoured to true --}}
                        <button class="eatBtn ml-2 devbtn" data-id="{{id}}"> 
                            Eat Me!</button>
                    </p>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h5 class="size25 red">Already Eaten:</h5>
            <ul class="violetRed mt-4">
                {{#each treats}}
                {{#if devoured}}
                <p class="eaten">
                {{id}} {{treat_name}}
                </p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row font text-center my-5">
        <div class="col-12">
            <h4 class="size25 formTitle red">Enter a Treat to Eat</h4>
            <form class="create-form">
                <div class="form-group">
                    <label class="violetRed" for="ca">Treat Name:</label>
                    <textarea class="form-control" id="treatName" rows="2"></textarea> 
                </div>
                <button id="treatSubmit" type="submit">Add Treat</button>
            </form>
        </div>
    </div>
</div>